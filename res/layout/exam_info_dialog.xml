<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/examInfoLinearLayoutTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/examinfo_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/testString"
            android:textSize="15sp"
            android:textStyle="bold" >
        </TextView>

        <TextView
            android:id="@+id/examinfo_SubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/testString"
            android:textSize="12sp" >
        </TextView>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/top"
        android:layout_marginRight="@dimen/top"
        android:layout_weight="1" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/LinearLayoutSG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/examInfoTextViewSG1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/testString" />

                <TextView
                    android:id="@+id/examInfoTextViewSG2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/testString" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayoutG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/examInfoTextViewG1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/testString" >
                </TextView>

                <TextView
                    android:id="@+id/examInfoTextViewG2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/testString" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayoutB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/examInfoTextViewB1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/testString" >
                </TextView>

                <TextView
                    android:id="@+id/examInfoTextViewB2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/testString" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayoutA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/examInfoTextViewA1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/testString" >
                </TextView>

                <TextView
                    android:id="@+id/examInfoTextViewA2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/testString" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/examInfoTextViewN1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/testString" >
                </TextView>

                <TextView
                    android:id="@+id/examInfoTextViewN2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/testString" >
                </TextView>
            </LinearLayout>

            <TextView
                android:id="@+id/examinfoAverage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/top"
                android:text="@string/testString" >
            </TextView>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/examinfo_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0"
        android:text="@string/close" >
    </Button>

</LinearLayout>