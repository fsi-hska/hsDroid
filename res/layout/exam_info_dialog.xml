<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_height="match_parent"
	android:layout_width="match_parent">
	<LinearLayout android:id="@+id/examInfoLinearLayoutTitle"
		android:orientation="horizontal" android:layout_gravity="center_horizontal"
		android:gravity="center_horizontal" android:layout_width="wrap_content"
		android:layout_height="wrap_content" >

		<LinearLayout android:layout_width="wrap_content"
			android:id="@+id/examInfoLinearLayoutTitleText" android:orientation="vertical"
			android:layout_gravity="center_vertical" android:layout_height="wrap_content"
			 android:layout_margin="5dp">

			<TextView android:id="@+id/examinfo_title" android:text="überschrift"
				android:layout_height="wrap_content" android:layout_width="wrap_content"
				android:textSize="15sp" android:textStyle="bold"></TextView>

			<TextView android:layout_height="wrap_content" android:id="@+id/examinfo_SubTitle"
				android:text="unterüberschrift" android:layout_width="wrap_content"
				android:textSize="12sp"></TextView>
		</LinearLayout>
	</LinearLayout>




	<ScrollView android:id="@+id/scrollView1"
		android:layout_marginLeft="@dimen/top" android:layout_marginRight="@dimen/top"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		>
		<LinearLayout android:id="@+id/linearLayout1"
			android:layout_height="wrap_content" android:orientation="vertical"
			android:layout_width="wrap_content">
			<LinearLayout android:id="@+id/LinearLayoutSG"
				android:layout_height="wrap_content" android:layout_weight="1"
				android:layout_width="wrap_content">
				<TextView android:text="TextView" android:layout_height="wrap_content"
					android:layout_width="match_parent" android:id="@+id/examInfoTextViewSG1">
				</TextView>
				<TextView android:text="TextView" android:layout_height="wrap_content"
					android:id="@+id/examInfoTextViewSG2" android:layout_width="wrap_content"
					android:layout_marginLeft="10dp">
				</TextView>
			</LinearLayout>
			<LinearLayout android:id="@+id/LinearLayoutG"
				android:layout_height="wrap_content" android:layout_weight="1"
				android:layout_width="wrap_content">
				<TextView android:text="TextView" android:layout_height="wrap_content"
					android:id="@+id/examInfoTextViewG1" android:layout_width="wrap_content">
				</TextView>
				<TextView android:text="TextView" android:layout_height="wrap_content"
					android:id="@+id/examInfoTextViewG2" android:layout_width="wrap_content"
					android:layout_marginLeft="10dp">
				</TextView>
			</LinearLayout>
			<LinearLayout android:id="@+id/LinearLayoutB"
				android:layout_height="wrap_content" android:layout_weight="1"
				android:layout_width="wrap_content">
				<TextView android:text="TextView" android:layout_height="wrap_content"
					android:layout_width="wrap_content" android:id="@+id/examInfoTextViewB1"></TextView>
				<TextView android:text="TextView" android:layout_height="wrap_content"
					android:layout_width="wrap_content" android:id="@+id/examInfoTextViewB2"
					android:layout_marginLeft="10dp">
				</TextView>
			</LinearLayout>
			<LinearLayout android:id="@+id/LinearLayoutA"
				android:layout_height="wrap_content" android:layout_weight="1"
				android:layout_width="wrap_content">
				<TextView android:text="TextView" android:layout_height="wrap_content"
					android:layout_width="wrap_content" android:id="@+id/examInfoTextViewA1">
				</TextView>
				<TextView android:text="TextView" android:layout_height="wrap_content"
					android:layout_width="wrap_content" android:id="@+id/examInfoTextViewA2"
					android:layout_marginLeft="10dp">
				</TextView>
			</LinearLayout>
			<LinearLayout android:id="@+id/linearLayoutN"
				android:layout_height="wrap_content" android:layout_weight="1"
				android:layout_width="wrap_content">
				<TextView android:text="TextView" android:layout_height="wrap_content"
					android:layout_width="wrap_content" android:id="@+id/examInfoTextViewN1">
				</TextView>
				<TextView android:text="TextView" android:layout_height="wrap_content"
					android:id="@+id/examInfoTextViewN2" android:layout_width="wrap_content"
					android:layout_marginLeft="10dp"></TextView>
			</LinearLayout>

<TextView android:id="@+id/examinfoAverage" android:text="Durchschnitt"
			android:layout_margin="@dimen/top" android:layout_width="wrap_content"
			android:layout_height="wrap_content" ></TextView>
		</LinearLayout>


		
	</ScrollView>
	<Button android:id="@+id/examinfo_cancel" android:text="@string/cancel"
		android:layout_gravity="center_horizontal" android:layout_width="wrap_content"
		android:layout_height="wrap_content" ></Button>
</LinearLayout>
