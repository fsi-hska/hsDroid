<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
	<PreferenceCategory android:title="Allgemein">
		<CheckBoxPreference android:title="AutoLogin"
			android:defaultValue="false" android:summary="Automatische Anmeldung beim Start."
			android:key="autoLoginPref" />
		<CheckBoxPreference android:title="Passwort Speichern"
			android:defaultValue="false"
			android:summary="Passwort wird unverschlüsselt gespeichert!"
			android:key="saveLoginDataPref" />
	</PreferenceCategory>
	<PreferenceCategory android:title="Notenspiegel">
		<CheckBoxPreference android:title="Auto Update"
			android:defaultValue="true"
			android:summary="Notenspiegel automatisch aktualisieren."
			android:key="autoUpdatePref" />
		<ListPreference android:title="Sortierreihenfolge"
			android:summary="Aufsteigend oder absteigend Anordnung der Noten."
			android:key="defaultOrderPref" android:defaultValue=""
			android:entries="@array/orderEntryArray" android:entryValues="@array/orderValueArray" />

		<ListPreference android:title="Standartansicht"
			android:summary="Legt fest in welcher Ansicht der Notenspiegel standartmäßig angezeigt wird."
			android:key="defaultViewPref" android:defaultValue=""
			android:entries="@array/defaultViewListArray" android:entryValues="@array/defaultViewListValues" />
		<CheckBoxPreference android:title="Hervorheben"
			android:defaultValue="false"
			android:summary="Prüfungsleistung des aktuellen Semesters hervorheben."
			android:key="highlightActualExamsPref" />
		<Preference android:title="Farbe" android:summary="Farbe der Hervorhebung auswählen."
			android:key="highlightColorPref" />
	</PreferenceCategory>
	<PreferenceCategory android:title="Daten">
		<Preference android:title="DB löschen"
			android:summary="Alle Daten aus der Datenbank löschen." android:key="clearDBPref" />
		<Preference android:title="Cookie löschen"
			android:summary="Entfernt Cookie aus dem Speicher." android:key="delCookiePref" />
	</PreferenceCategory>
</PreferenceScreen>
